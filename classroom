#!/usr/bin/python3

#import yaml
import argparse

def print_help(command):
    if command == "build":
        print("help for build missing - FIX")
    elif command == "add":
        print("help for add missing - FIX")
    elif command == "remove":
        print("help for remove missing - FIX")
    else:
        print("general help missing - FIX")

# Parse command line options
parser = argparse.ArgumentParser( add_help=False)
parser.add_argument('-h', '--help', action='store_true')
parser.add_argument('-f', '--force', action='store_true')
parser.add_argument('params', nargs='*')
args = parser.parse_args()

pars=args.params[1:]
if len(args.params)==0 :
    print_help("help")
    exit(0)
else:
    cmd=args.params[0]

if args.help or (len(pars)>0 and pars[0]=="help"):
    print_help(cmd)

elif cmd == "build":
    print("build()",pars)

elif cmd == "add":
    print("add()",pars)

elif cmd == "remove":
    print("remove()",pars)

else:
    print_help(cmd)

exit(0)

